mixin categories(id='', titleBlock=null, cards)
    .categoriesTemplate(id=id)
        if titleBlock && titleBlock.type === 'titlepag'
            .mainTitle
                h2= titleBlock.title
        .boxFlex
            each card in cards
                a.card(href=card.link, rel="noopener noreferrer")
                    .boxImg
                        img(src=card.img, alt=card.alt)
                    .boxText
                        if card.title
                            h3!= card.title
